<h1>Questions in <%= @survey.title %> Survey</h1>
<form action="/survey/<%= @survey.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Rename Survey</label>
  <input id="title" name="title" type="text">
  <button type="submit">Change</button>
</form>
<br>
<hr>

<h3> Questions: </h3>
<form action="/questions" method="post">
    <input id="survey_id" name="survey_id" type="hidden" value="<%= @survey.id() %>">

  <label for="question">Question</label>
  <input id="question" name="question" type="text">

  <button type="submit">Add</button>
</form>

<ol>
  <% @survey.questions().each() do |question| %>
    <li><a href = "/question/<%= question.id() %>"><%= question.question() %></a> [<a href="/delete_question/<%= question.id() %>">x</a>]</li>
  <% end %>
</ol>
<br>


<form action="/survey/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete this shitty survey</button>
</form>

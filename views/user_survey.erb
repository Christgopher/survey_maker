<h1> <%= @survey.title %> </h1>

<%= @question.question %>
<form action="/user_survey" method="post">
  <input id="question_id" name="question_id" type="hidden" value="<%= @question.id() %>">
  <input id="survey_id" name="survey_id" type="hidden" value="<%= @survey.id() %>">
  <label for="answer">Select an Answer</label>
  <select id='answer' name='answer' type='text'>
    <% @question.answers.each() do |answer| %>
      <option value="<%= answer.id()%>"> <%= answer.answer() %> </option>
    <% end %>
  </select>

  <button type="submit">Add answer</button>
</form>
